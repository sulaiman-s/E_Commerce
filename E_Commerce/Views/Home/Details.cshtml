@model E_Commerce.Models.CardModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>




<div class="container">
    <div class="cardd">
        <div class="container-fliud">
            <div class="wrapper row">
                <div class="preview col-md-6">

                    <div class="preview-pic tab-content" style="height:350px;">
                        <div class="tab-pane active" id="pic-1"><img src="@Url.Content(Model.ItemImage)" height="350"/></div>
                       @* <div class="tab-pane" id="pic-2"><img src=""  alt="@Model.ItemName"/></div>
                        <div class="tab-pane" id="pic-3"><img src=""  alt="@Model.ItemName" /></div>
                        <div class="tab-pane" id="pic-4"><img src=""  alt="@Model.ItemName"/></div>
                        <div class="tab-pane" id="pic-5"><img src=""  alt="@Model.ItemName"/></div>*@
                    </div>
                    <ul class="preview-thumbnail nav nav-tabs">
                        <li class="active"><a data-target="#pic-1" data-toggle="tab"><img src="@Url.Content(Model.ItemImage)" /></a></li>
                        @*<li><a data-target="#pic-2" data-toggle="tab"><img src="" alt="@Model.ItemName" /></a></li>
                        <li><a data-target="#pic-3" data-toggle="tab"><img src="" alt="@Model.ItemName" /></a></li>
                        <li><a data-target="#pic-4" data-toggle="tab"><img src="" alt="@Model.ItemName" /></a></li>
                        <li><a data-target="#pic-5" data-toggle="tab"><img src="" alt="@Model.ItemName" /></a></li>*@
                    </ul>

                </div>
                <div class="details col-md-6">
                    <h3 class="product-title">Men's @ViewBag.Name</h3>
                    <div class="rating">
                        <div class="stars">
                            <span class="glyphicon glyphicon-star " ></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star-empty"></span>
                            <span class="glyphicon glyphicon-star-empty"></span>
                        </div>
                        <span class="review-no">(41 reviews)</span>
                    </div>
                    <p class="product-description">@Model.Description.</p>
                    <h4 class="price">current price: <span>$@Model.Price</span></h4>
                    <p class="vote"><strong>91%</strong> of buyers enjoyed this product! <strong>(87 votes)</strong></p>
                    <h5 class="sizes">
                        sizes:
                        <span class="size" data-toggle="tooltip" title="small">s</span>
                        <span class="size" data-toggle="tooltip" title="medium">m</span>
                        <span class="size" data-toggle="tooltip" title="large">l</span>
                        <span class="size" data-toggle="tooltip" title="xtra large">xl</span>
                    </h5>
                   @Html.HiddenFor(g => g.Id)
                    <div class="action">
                        <a id="btn_add" href="@Url.Action("CartAdd", "Home",new { id = Model.Id })" class="like btn btn-default"  margin:10px;">
                            <span class="glyphicon glyphicon-shopping-cart"></span> Add To Cart
                        </a> 
                        <a id="btn_add" href="https://wa.me/+923484372715" class="like btn btn-default"  style=" margin:10px;">
                            <span class="glyphicon glyphicon-phone-alt"></span> Contact Supplier
                        </a>
                        
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<p>

    @Html.ActionLink("Back to List", "Index")
</p>
