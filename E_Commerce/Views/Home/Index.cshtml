@model E_Commerce.ViewModels.HomeViewmodel


@{
    ViewBag.Title = "Home Page";
}

<div id="myCarousel" class="carousel slide " style="width:100%; height: 400px; margin:0 auto" data-ride="carousel">

    <div id="myCarousel" class="carousel slide " style="width:100%; height: 400px; margin:0 auto" data-ride="carousel">

        <ol class="carousel-indicators">
            @for (int j = 0; j < Model.Banners.Count; j++)
            {
                var act = j == 0 ? "active" : "";
                <li data-target="#myCarousel" data-slide-to="@j" class="@act"  ></li>
            }
        </ol>
        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            @{int i = 0;}
            @foreach (var item in Model.Banners)
            {
                {
                    i++;
                    var active = i == 1 ? "active" : "";
                    <div class="item @active">
                            <img src="@Url.Content(item.Ban_Img)" alt="Banner" style="width:100%; height:400px;">
                    </div>
                }
            }
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>



<hr  style="height:2px; background:linear-gradient(to right ,#ff0000,#ffd800);" />
<h4 style="text-align: center; " class="heading">Featured Products</h4>
<hr  style="height:2px; background:linear-gradient(to right,#ffd800,#ff0000);" />



<div class="allCards">
    @foreach (var item in Model.Categories)
    {
        <div class="card" id="cd">
            <div class="cardImage" style="width:26rem;">
                <a href="@Url.Action("CardByCateg","Home",new { id=item.Id})">
                    <img src="@Url.Content(item.Image)" class="card-img-top" alt="@item.Name+Image">
                </a>
            </div>
            <div class="card-body">
                <h5 class="card-title" style="font-size:15px; margin-left:10px; font:bold; text-align:center;">@item.Name</h5>

                <div class="card-read-more">
                    <a href="@Url.Action("CardByCateg","Home",new { id=item.Id})" class="btn btn-link btn-block">
                        View More
                    </a>
                </div>
            </div>
        </div>
    }
</div>

@section scripts{


    <script>
        $('.carousel.carousel-slider').carousel({
            fullWidth: true
        });
    
        
    </script>


}

