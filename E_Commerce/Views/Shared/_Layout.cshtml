<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Shop</title>
    <link rel="shortcut icon" type="image/ico" href="~/Images/webico.png">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap.min.css" rel="stylesheet" />



    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top " id="navb">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" >
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index","Home")" class="navbar-brand" style="display:flex;"><img src="~/Images/Logo.png" alt="Alternate Text" height="25" width="90" /></a>
            </div>
            <div class="navbar-collapse collapse" id="lis">
                <ul class="nav navbar-nav">
                    <li title="Home">@Html.ActionLink("Home", "Index", "Home")</li>
                    @Html.Action("NavCateg", "Home")
                    <li title="About">@Html.ActionLink("About", "About", "Home")</li>
                    <li title="About">@Html.ActionLink("Contact us", "Contact", "Home")</li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li title="Adim">@Html.ActionLink("Admin", "Index", "Admin")</li>

                    }
                </ul>
                @Html.Partial("_LoginPartial")
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="@Url.Action("Cart","Home")" title="cart"><span class="glyphicon glyphicon-shopping-cart"></span> Cart  <span style="background-color:cyan; color:black; border-radius:2px; left:5px; width:10px;">@ViewBag.Citems</span> </a></li>
                </ul>

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

    </div>
    <hr />

    <footer >
        <div class="row" style="margin-left:15px; margin-right:15px;">
            <div class="col-md-6 col-lg-3">
                <h5>ABOUT US</h5>
                <p>
                    we are manufacturers and worldwide
                    exporters of quality SPorts Wear,Casual Wear,Martial Uniform,Fitness Wear,Fight Wear, Kevlar Garments, Motorbike Garments and Boxing Products,We uses the highest technology, quality materials and skilled workforce to mnaufacture the hgh quality products.We have strong desire to supply our customer with better quality products and service . Customers ideas,design and sample are welcome.We turn customer ideas into reality..
                </p>
            </div>
            <div class="col-md-6 col-lg-3">
                <h5> USEFUL LINKS</h5>
                <ul class="remove-bullets">
                    <li> <a href="@Url.Action("Index","Home")">Home</a></li>

                    <li> <a href="@Url.Action("About","Home")">About Us</a> </li>

                    <li><a href="@Url.Action("Contact","Home")">Contact Us </a></li>
               
                    <li><a href="#"> Privacy Policy </a></li>
                    
                    <li><a href="#">Terms&Conditions</a> </li>
                </ul>
            </div>
            <div class="col-md-6 col-lg-3">
                <h5> WHY US</h5>
                <ul class="bullets">
                    <li><a href="#"> 24 Hours Online</a></li>
                    <li><a href="#">Free Consultant</a> </li>
                    <li><a href="#">Professional Manufactures </a></li>
                    <li><a href="#">Shipping on Time </a></li>
                </ul>
            </div>
            <div class="col-md-6 col-lg-3">
                <h5>CONTACT INFORMATION</h5>
                <ul class="remove-bullets">
                    <li>Address: will be written</li>
                    <li>Tel 1: will be written</li>
                    <li>Tel 2:  will be written</li>
                    <li>Mail1:<a></a></li>
                    <li>Mail2:<a></a></li> 
                </ul>
            </div>
            <div class="col-lg-12 col-md-12">
                <hr>
                <h5 style="text-align: center;">&copy; 2022 All rights reserved</h5>
            </div>

        </div>

    </footer>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
